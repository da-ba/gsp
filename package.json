{
  "name": "github-slash-palette",
  "version": "0.0.3",
  "description": "Slash commands for GitHub markdown fields",
  "type": "module",
  "scripts": {
    "build": "tsx scripts/build.ts",
    "dev": "vite build --watch --mode development",
    "clean": "rm -rf dist stats.html",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,html,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,html,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "check": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "analyze": "npm run build && echo '\nBundle analysis saved to stats.html'"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.1.32",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "happy-dom": "^20.0.11",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rollup-plugin-visualizer": "^5.14.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^6.4.1",
    "vitest": "^4.0.16"
  }
}
